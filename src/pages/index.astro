---
import '../styles/global.css';
import bgImage from "../assets/background-image.jpg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Alpine Patagonia</title>

    <!-- SEO meta -->
    <meta name="description" content="Alpine Patagonia — Sky, expeditions and climbing in Chaltén. Expert guides and bespoke climbing expeditions in Patagonia." />
    <meta name="robots" content="index, follow" />
    <!-- Canonical: replace the href with your production URL -->
    <link rel="canonical" href="https://alpinepatagonia.com/" />
    <link rel="icon" href="/favicon.svg" type="image/png" />

    <!-- Open Graph -->
    <meta property="og:title" content="Alpine Patagonia" />
    <meta property="og:description" content="Alpine Patagonia — Sky, expeditions and climbing in Chaltén. We’ll be back very soon." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://alpinepatagonia.com/" />
    <meta property="og:image" content="https://alpinepatagonia.com/assets/background-image.jpg" />
    <meta property="og:site_name" content="Alpine Patagonia" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@your_twitter_handle" />
    <meta name="twitter:title" content="Alpine Patagonia" />
    <meta name="twitter:description" content="Sky, expeditions and climbing in Chaltén." />
    <meta name="twitter:image" content="https://alpinepatagonia.com/assets/background-image.jpg" />

    <!-- Structured data (replace URLs and social links with real values) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "name": "Alpine Patagonia",
            "url": "https://alpinepatagonia.com/",
            "logo": "https://alpinepatagonia.com/assets/logo.png",
            "sameAs": []
          },
          {
            "@type": "WebSite",
            "url": "https://alpinepatagonia.com/",
            "name": "Alpine Patagonia",
            "inLanguage": "en-US",
            "potentialAction": {
              "@type": "SearchAction",
              "target": "https://alpinepatagonia.com/search?q={search_term_string}",
              "query-input": "required name=search_term_string"
            }
          }
        ]
      }
    </script>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto,
          'Helvetica Neue', Arial, sans-serif;
      }

      .font-display {
        font-family: 'Bebas Neue', 'Inter', system-ui, sans-serif;
        letter-spacing: 0.06em;
      }

      /* Responsive typography */
      .title-xl {
        font-size: clamp(3.5rem, 12vw, 7rem);
        line-height: 0.95;
      }

    .subtitle-lg {
 			font-size: clamp(1.4rem, 5.2vw, 1.9rem);
			line-height: 1.4;
		}

      /* Animations */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(18px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in {
        opacity: 0;
        animation: fadeInUp 0.9s ease-out forwards;
      }

      .fade-delay-1 { animation-delay: 0.2s; }
      .fade-delay-2 { animation-delay: 0.4s; }
      .fade-delay-3 { animation-delay: 0.6s; }

      @media (prefers-reduced-motion: reduce) {
        .fade-in {
          animation: none;
          opacity: 1;
        }
      }
    </style>
  </head>

  <body class="min-h-screen">
    <section
      class="relative flex min-h-screen items-center justify-center bg-cover bg-center"
      style={`background-image: url(${bgImage.src})`}
    >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/30"></div>

      <!-- Content -->
      <div class="relative z-10 text-center px-6 max-w-3xl">
        <h1
          class="fade-in fade-delay-1 title-xl font-display text-white mb-6"
        >
          ALPINE PATAGONIA
        </h1>

        <p
          class="fade-in fade-delay-2 subtitle-lg text-white/90 mb-20"
        >
          Our website is currently under construction. <br />
         <span class="text-2xl md:text-4xl">We’ll be back very soon.</span>
        </p>

        <a
					href="mailto:robertotreu@gmail.com"
  				target="_blank"
  				rel="noopener noreferrer"
					class="fade-in fade-delay-3 inline-flex items-center justify-center
								rounded-xs border border-white
								px-6 py-4 sm:px-8 sm:py-5 md:px-12 md:py-8
								text-[clamp(1.1rem,4vw,1.875rem)]
								font-normal uppercase tracking-widest
								text-white backdrop-blur-sm
								transition-all duration-300
								hover:text-white
                hover:backdrop-blur-none
								hover:bg-transparent"
				>
					Email for any Inquiry
			</a>


      </div>
    </section>
  </body>
</html>
